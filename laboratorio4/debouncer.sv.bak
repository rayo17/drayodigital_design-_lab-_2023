module debouncer (
    input logic clk,
    input logic raw_btn,   // Se침al del bot칩n sin debouncer
    output logic btn_out   // Se침al del bot칩n con debouncer
);

    logic [3:0] counter = 4'b0000;
    logic btn_state = 0;
    logic btn_prev_state = 0;

    always_ff @(posedge clk) begin
        btn_prev_state <= btn_state;
        btn_state <= raw_btn;
        
        if (btn_state != btn_prev_state) begin
            counter <= counter + 4'b0001;
        end else begin
            counter <= 4'b0000;
        end
    end

    // Suponiendo que el rebote se resuelve en 16 ciclos de reloj
    assign btn_out = (counter >= 4'b1000) ? btn_state : btn_prev_state;

endmodule
