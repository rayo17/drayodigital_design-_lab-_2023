module tb_board;

  // Declaración de señales
  reg clk;
  reg rst;
  wire [7:0][7:0] array;

  // Instancia del módulo
  board uut (
    .array(array)
  );

  // Generación de reloj
  always begin
    #5 clk = ~clk;
  end

  // Inicialización de señales
  initial begin
    clk = 0;
    rst = 0;
    
    // Reset
    rst = 1;
    #10 rst = 0;

    // Esperar un ciclo de reloj
    #5;

    // Desactivar el reset y comenzar la simulación
    rst = 0;
  end

  // Generar estímulos
  initial begin
    // Mostrar elementos de la matriz
    $display("------- Mostrando matriz 2D -------");
    for (int i = 0; i <= 7; i = i + 1) begin
      for (int j = 0; j <= 7; j = j + 1) begin
        $display("\t array[%0d][%0d] = %0d", i, j, array[i][j]);
      end
    end

    // Terminar la simulación
    $finish;
  end

endmodule
